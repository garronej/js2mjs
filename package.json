{
    "name": "js2mjs",
    "version": "0.1.0",
    "homepage": "https://github.com/garronej/js2mjs",
    "description": "Transform a codebase that uses .js into a codebase that uses .mjs",
    "main": "dist/lib/index.js",
    "types": "dist/lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git://github.com/garronej/js2mjs"
    },
    "scripts": {
        "build": "tsc",
        "prettier": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "yarn prettier --write",
        "format:check": "yarn prettier --list-different"
    },
    "bin": {
        "js2mjs": "dist/bin/js2mjs.js"
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/garronej",
    "license": "MIT",
    "dependencies": {
        "commander": "^4.1.1",
        "tsafe": "^1.4.1"
    },
    "keywords": [
        "transpile",
        "cjs",
        "CommonJs",
        "esm"
    ],
    "files": [
        "src/",
        "dist/"
    ],
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/js-yaml": "^3.12.3",
        "@types/node": "^10.0.0",
        "@types/node-fetch": "^2.5.6",
        "@types/url-join": "^4.0.0",
        "husky": "^4.3.8",
        "js-yaml": "^3.13.1",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.0",
        "typescript": "^4.7.3",
        "vitest": "^0.24.0"
    }
}
